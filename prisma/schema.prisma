// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id   Int    @id
  name String
  Task Task[]
}

model Task {
  id     Int    @id
  task   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int

  @@index([userId])
}
